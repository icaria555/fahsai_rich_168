<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <div align="center" class="flash alert alert-success"><%= value %></div>
  <% elsif key == "alert" %>
    <div align="center" class="flash alert alert-danger"><%= value %></div>
  <% else %>
    <div align="center" class="flash alert alert-<%= key %>"><%= value %></div>
  <% end %>
<% end %>
