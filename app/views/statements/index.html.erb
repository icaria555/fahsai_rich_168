<p id="notice"><%= notice %></p>

<h1>Statements</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>ผู้ซื้อ</td>
      <td>ราคารวม</td>
      <td>pv รวม</td>
    </tr>
    <% @statements.each do |statement| %>
      <tr>
        <% @buyer = @users.find_by_id(statement.purchaser_id) %>
        <td><%=@buyer.first_name %> <%=@buyer.last_name %></td>
        <td><%= statement.total_price %></td>
        <td><%= statement.total_pv %></td>
        <td><%= link_to 'Show', statement %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

